<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activity.TestBlockActivity">

    <TextView
        android:id="@+id/start_my_block"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bt_shape_bg"
        android:text="start 自定义Block"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/start_third_block"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bt_shape_bg"
        android:text="start blockcanary"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/create_block"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bt_shape_bg"
        android:text="create 卡顿"
        android:textColor="@color/white"
        android:textSize="20sp" />
</LinearLayout>